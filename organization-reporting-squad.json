{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>SonarSource/renovate-config"
    ],
    "timezone": "US/Central",
    "rebaseWhen": "never",
    "schedule": [
        "* 7-15 * * 1"
    ],
    "enabledManagers": [
        "maven",
        "gradle",
        "gradle-wrapper",
        "poetry",
        "pipenv"
    ],
    "dependencyDashboard": true,
    "configMigration": true,
    "addLabels": [
        "dependencies"
    ],
    "draftPR": false,
    "packageRules": [
        {
            "matchPackageNames": [
                "org.openapitools:openapi-generator-gradle-plugin",
                "com.sonarsource.sca:*",
                "com.sonarsource.sonarcloud:*",
                "org.sonarsource.api.plugin:sonar-plugin-api"
            ],
            "enabled": false
        },
        {
            "matchPackageNames": [
                "certifi"
            ],
            "versioning": "semver"
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "enabled": false
        },
        {
            "groupName": "Java dependencies",
            "groupSlug": "java-deps",
            "matchManagers": [
                "maven",
                "gradle",
                "gradle-wrapper"
            ],
            "separateMinorPatch": false,
            "automerge": false
        },
        {
            "groupName": "Python dependencies",
            "groupSlug": "python-deps",
            "matchManagers": [
                "poetry",
                "pipenv"
            ],
            "separateMinorPatch": false,
            "automerge": false
        }
    ]
}

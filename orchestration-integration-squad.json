{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>SonarSource/renovate-config",
        "config:best-practices",
        "group:allNonMajor",
        ":timezone(CET)"
    ],
    "enabledManagers": [
        "docker",
        "docker-compose",
        "github-actions",
        "gradle",
        "gradle-wrapper",
        "npm",
        "poetry"
    ],
    "schedule": [
        "* 9-11 * * 1-5"
    ],
    "automerge": false,
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch",
                "minor",
                "major"
            ],
            "minimumReleaseAge": "5 days"
        },
        {
            "matchFileNames": [
                "**/libs.versions.toml",
                "**/build.gradle"
            ],
            "addLabels": [
                "gradle"
            ]
        },
        {
            "matchFileNames": [
                "**/pyproject.toml"
            ],
            "addLabels": [
                "poetry"
            ]
        }
    ],
    "vulnerabilityAlerts": {
        "enabled": true,
        "labels": [
            "vulnerability-alert"
        ]
    },
    "osvVulnerabilityAlerts": true
}

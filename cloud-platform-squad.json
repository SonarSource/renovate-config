{
    "extends": [
        "github>SonarSource/renovate-config"
    ],
    "schedule": [
        "* 9-11 * * 4"
    ],
    "automerge": false,
    "labels": [
        "dependency-update"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch",
                "minor",
                "major"
            ],
            "minimumReleaseAge": "5 days"
        },
        {
            "matchFileNames": [
                "**/libs.versions.toml",
                "**/build.gradle"
            ],
            "addLabels": [
                "gradle"
            ]
        },
        {
            "matchFileNames": [
                "**/pyproject.toml"
            ],
            "addLabels": [
                "platform"
            ]
        },
        {
            "description": "Don't pin SonarSource GitHub Actions, let them rely on major versions",
            "matchManagers": [
                "github-actions"
            ],
            "matchPackageNames": [
                "SonarSource/**"
            ],
            "matchUpdateTypes": [
                "pin",
                "rollback"
            ],
            "enabled": false
        },
        {
            "description": "Group all GitHub Actions in the same PR.",
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github actions",
            "groupSlug": "github-actions",
            "addLabels": [
                "github-actions"
            ]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "datasourceTemplate": "maven",
            "depNameTemplate": "micronaut",
            "packageNameTemplate": "io.micronaut.platform:micronaut-platform",
            "fileMatch": [
                "(^|/)libs\\.versions.toml"
            ],
            "matchStrings": [
                "micronaut\\s*=\\s*\"(?<currentValue>[\\w+\\.\\-]*)\""
            ]
        }
    ]
}
